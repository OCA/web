<?xml version="1.0" encoding="UTF-8"?>
 <openerp>
    <data>
        <record model="ir.ui.view" id="user_toggle_active_view">
            <field name="name">users.toggle</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
                        <xpath expr="//field[@name='active']" position="replace">
                           <div>
                              <field name="active" class="oe_inline" widget="boolean_switch" options="{'data-on':'Active','data-off':'Inactive','data-onstyle':'primary','data-offstyle':'danger','data-size':'mini'}"/>
                           </div>
                        </xpath>
            </field>
        </record>
    </data>
</openerp>
