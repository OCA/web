<odoo>
    <record id="view_users_form_web_hide_menu" model="ir.ui.view">
        <field name="name">res.users.form.web.hide.menu</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form" />
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Hide Menu" name="hide_menu">
                    <field name="hide_menu_ids" nolable="1">
                        <tree editable="top">
                            <field
                                name="menu_id"
                                options="{'no_create': True, 'no_edit': True}"
                            />
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
