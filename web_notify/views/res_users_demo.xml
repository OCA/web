<odoo>
    <record id="view_users_form_simple_modif_inherit" model="ir.ui.view">
        <field name="name">res.users.form.simple.view.modif.inherit</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form" />
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[1]" position="after">
                <page string="Test web notify" name="test_web_notify">
                    <group>
                        <group>
                            <button
                                name="swal_notify_success"
                                type="object"
                                string="Test swal success notification"
                                class="btn btn-success"
                            />

                            <button
                                name="swal_notify_danger"
                                type="object"
                                string="Test swal danger notification"
                                class="btn btn-danger"
                            />

                            <button
                                name="swal_notify_warning"
                                type="object"
                                string="Test swal warning notification"
                                class="btn btn-warning"
                            />

                            <button
                                name="swal_notify_info"
                                type="object"
                                string="Test swal info notification"
                                class="btn btn-info"
                            />

                            <button
                                name="swal_notify_default"
                                type="object"
                                string="Test swal default notification"
                            />
                        </group>
                        <group>
                            <button
                                name="notify_success"
                                type="object"
                                string="Test success notification"
                                class="btn btn-success"
                            />

                            <button
                                name="notify_danger"
                                type="object"
                                string="Test danger notification"
                                class="btn btn-danger"
                            />

                            <button
                                name="notify_warning"
                                type="object"
                                string="Test warning notification"
                                class="btn btn-warning"
                            />

                            <button
                                name="notify_info"
                                type="object"
                                string="Test info notification"
                                class="btn btn-info"
                            />

                            <button
                                name="notify_default"
                                type="object"
                                string="Test default notification"
                            />
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
