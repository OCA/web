<!-- This is now considered part of the legacy js components and is expected to change in a future release  -->
<templates id="template" xml:space="preserve">

    <t
        t-name="web_refresher.Pager"
        t-inherit="web.Pager"
        t-inherit-mode="extension"
        owl="1"
    >
        <xpath expr="//nav[hasclass('o_pager')]//span[1]" position="after">
            <span class="btn-group" aria-atomic="true">
                <button
                    type="button"
                    class="o_pager_refresh fa fa-refresh btn btn-secondary"
                    aria-label="Refresh"
                    title="Refresh"
                    tabindex="-1"
                    t-on-click="_changeSelection(0)"
                    style="margin-right: 5px;"
                />
            </span>
        </xpath>
    </t>

</templates>
