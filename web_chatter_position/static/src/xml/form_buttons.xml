<?xml version="1.0" encoding="utf-8" ?>
<templates id="form_view" xml:space="preserve">

    <t t-inherit="web.FormControlPanel" t-inherit-mode="extension" owl="1">
        <xpath expr='//t[@t-slot="control-panel-action-menu"]' position="before">
            <button
                type="button"
                class="btn btn-outline-primary o_chatter_position_button"
                t-on-click="() => this._onChatterPosition()"
            >
                <i class="fa fa-arrows-h" />
            </button>
        </xpath>
    </t>

</templates>
