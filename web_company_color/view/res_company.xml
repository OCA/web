<odoo>

    <record id="view_company_form" model="ir.ui.view">
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form" />
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="Company Styles" name="company_styles"
                      groups="base.group_system">
                    <group string="Colors" name="colors">
                        <field name="primary_color" widget="color" />
                        <field name="primary_text_color" widget="color" />
                        <field name="required_color" widget="color" />
                        <field name="required_text_color" widget="color" />
                    </group>
                    <div class="alert alert-info info_icon" role="alert">
                        <span class="fa fa-info fa-2x" />
                        In order for the changes to take effect, please refresh
                        the page.
                    </div>
                </page>
            </notebook>
        </field>
    </record>

</odoo>
