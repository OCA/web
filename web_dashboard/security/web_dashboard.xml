<odoo>
  <record model="ir.model.access" id="web_dashboard_access_all">
    <field name="name">web.dashboard access all</field>
    <field name="model_id" ref="model_web_dashboard" />
    <field name="group_id" ref="base.group_user" />
    <field name="perm_read" eval="1" />
    <field name="perm_create" eval="0" />
    <field name="perm_write" eval="0" />
    <field name="perm_unlink" eval="0" />
  </record>
  <record model="ir.model.access" id="web_dashboard_access_config">
    <field name="name">web.dashboard access config</field>
    <field name="model_id" ref="model_web_dashboard" />
    <field name="group_id" ref="base.group_system" />
    <field name="perm_read" eval="1" />
    <field name="perm_create" eval="1" />
    <field name="perm_write" eval="1" />
    <field name="perm_unlink" eval="1" />
  </record>
  <record id="web_dashboard_access_rule_all" model="ir.rule">
    <field name="name">Can see his own dashboards</field>
    <field name="model_id" ref="model_web_dashboard" />
    <field
            name="domain_force"
        >['|', ('user_id', '=', user.id), ('user_id', '=', False)]</field>
    <field name="groups" eval="[(4, ref('base.group_user'))]" />
  </record>
  <record id="web_dashboard_access_rule_config" model="ir.rule">
    <field name="name">Can see all dashboards</field>
    <field name="model_id" ref="model_web_dashboard" />
    <field name="domain_force">[(1, '=', 1)]</field>
    <field name="groups" eval="[(4, ref('base.group_system'))]" />
  </record>
</odoo>
