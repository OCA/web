<template>
<t t-name="field-selection">
    <t t-if="widget.fields_selection">
        <select id="field_name_selection"> 
            <t t-foreach="widget.fields_selection" t-as="record">
                <option t-att-value="record.id"><t t-esc="record.string"/></option>
            </t>
        </select>
    </t>
</t>

