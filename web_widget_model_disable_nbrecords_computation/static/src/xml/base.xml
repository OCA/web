<?xml version="1.0" encoding="UTF-8" ?>
<template>
    <t
        t-name="web_widgetmodel_disable_nbrecords_computation.FieldDomain.content"
        t-inherit="web.FieldDomain.content"
        t-inherit-mode="extension"
    >
        <xpath expr="//div[hasclass('o_field_domain_panel')]" position="replace">
            <div t-if="hasModel" class="o_field_domain_panel">
                <button
                    t-if="isValid &amp;&amp; nbRecords>=0"
                    class="btn btn-sm btn-secondary o_domain_show_selection_button"
                    type="button"
                >
                    <i
                        class="fa fa-arrow-right"
                        role="img"
                        aria-label="Domain"
                        title="Domain"
                    />
                    <t t-esc="nbRecords" /> record[s] </button>
                <span t-elif="isValid &amp;&amp; nbRecords==-1">
                    Fetch nb records disabled
                </span>
                <span t-else="" class="text-warning" role="alert"><i
                        class="fa fa-exclamation-triangle"
                        role="img"
                        aria-label="Warning"
                        title="Warning"
                    /> Invalid domain</span>

                <button
                    t-if="inDialogEdit"
                    class="btn btn-sm btn-primary o_field_domain_dialog_button"
                >Edit Domain</button>
            </div>
        </xpath>
    </t>
</template>
