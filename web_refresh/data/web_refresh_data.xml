<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data noupdate="1">
        <function
            model="ir.config_parameter"
            name="set_param"
            eval="('web_refresh.default_refresh_every', 60)"
        />
        <function
            model="ir.config_parameter"
            name="set_param"
            eval="('web_refresh.min_refresh_every', 60)"
        />
        <record model="res.groups" id="group_watch_changes">
            <field name="name">Allow refresh on server changes</field>
            <field name="category_id" ref="base.module_category_usability" />
        </record>
        <record model="res.groups" id="group_allow_refresh_every">
            <field name="name">Allow periodic refresh</field>
            <field name="category_id" ref="base.module_category_usability" />
        </record>
        <record model="res.groups" id="base.group_user">
            <field name="implied_ids" eval="[(4, ref('group_allow_refresh_every'))]" />
        </record>
    </data>
</odoo>
